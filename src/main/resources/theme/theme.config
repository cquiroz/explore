/*******************************
        Theme Selection
*******************************/

/* To override a theme for an individual element
   specify theme name below
*/

/* Global */
@site        : 'darkly';
@reset       : 'default';

/* Elements */
@button      : 'darkly';
@container   : 'default';
@divider     : 'darkly';
@flag        : 'default';
@header      : 'default';
@icon        : 'default';
@image       : 'default';
@input       : 'darkly';
@label       : 'darkly';
@list        : 'darkly';
@loader      : 'default';
@placeholder : 'default';
@rail        : 'default';
@reveal      : 'default';
@segment     : 'darkly';
@step        : 'darkly';

/* Collections */
@breadcrumb : 'darkly';
@form       : 'darkly';
@grid        : 'default';
@menu       : 'darkly';
@message    : 'darkly';
@table      : 'darkly';

/* Modules */
@accordion   : 'darkly';
@checkbox    : 'darkly';
@dimmer      : 'default';
@dropdown    : 'darkly';
@embed       : 'default';
@modal       : 'darkly';
@nag         : 'default';
@popup       : 'darkly';
@progress    : 'darkly';
@rating      : 'default';
@search      : 'default';
@shape       : 'default';
@sidebar     : 'darkly';
@sticky      : 'default';
@tab         : 'default';
@transition  : 'default';

/* Views */
@ad          : 'default';
@card        : 'darkly';
@comment     : 'darkly';
@feed        : 'darkly';
@item        : 'darkly';
@statistic   : 'darkly';

/*******************************
            Folders
*******************************/

/* Path to theme packages */
//@themesFolder : '../../../../../../src/main/resources/themes';
@themesFolder : '../../../../../../src/main/resources/themes';

/* Path to site override folder */
@siteFolder  : '../../../../../../src/main/resources/theme/site';

/*******************************
         Import Theme
*******************************/

@import (multiple) "~semantic-ui-less/theme.less";
@fontPath : "../../../themes/@{theme}/assets/fonts";

/* End Config */
